{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MakeFile",
            "type": "shell",
            "command": "make DoomBFA",
            "options": {
                "cwd":"${workspaceRoot}/buildRelwithdebuginfo"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Install Shaders",
            "type": "shell",
            "command": "cp -r -u -v ${workspaceRoot}/base/renderprogs/* ./base/renderprogs",
            "options": {
                "cwd": "/absolute/path/to/game/directory/",
            },
            "dependsOn": [
                "MakeFile"
            ]
        }
    ]
}